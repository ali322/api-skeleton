{
  "name": "api-boilerplate",
  "version": "0.0.1",
  "description": "api boilerplate",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "nodemon --inspect --watch 'src/**/*' -e ts --exec 'node -r ts-node/register' ./src/index.ts",
    "lint": "eslint src --ext .ts",
    "doc": "apidoc -i src -o doc",
    "test": "mocha --bail --exit --reporter=mochawesome --reporter-options reportDir=test/report test/spec/*.js",
    "cov": "rimraf test/coverage test/.nyc_output && nyc --reporter=html npm test"
  },
  "apidoc": {
    "title": "api boilerplate"
  },
  "keywords": [
    "koa"
  ],
  "author": "alichen",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "bcrypt": "^5.0.0",
    "class-validator": "^0.9.1",
    "dayjs": "^1.8.30",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-jwt": "^4.0.0",
    "koa-router": "^7.4.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.13",
    "mysql": "^2.18.1",
    "typeorm-naming-strategies": "^1.1.0",
    "uuid": "^8.2.0",
    "validatorjs": "^3.18.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.39",
    "@types/koa__cors": "^2.2.3",
    "@types/node": "^11.9.4",
    "@types/uuid": "^8.0.0",
    "@types/validatorjs": "^3.15.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "apidoc": "^0.17.7",
    "chai": "^4.2.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "mocha": "^8.0.1",
    "mochawesome": "^6.1.1",
    "nodemon": "^1.18.10",
    "nyc": "^15.1.0",
    "ts-node": "^8.0.2",
    "qs": "^6.9.4",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "typescript": "^3.3.3"
  }
}
